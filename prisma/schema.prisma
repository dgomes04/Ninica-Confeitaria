// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String
  address   String
  tel       String    @unique
  confirmed Boolean   @default(false)
  deleted   Boolean   @default(false)
  admin     Boolean   @default(false)
  createdAt DateTime
  editedAt  DateTime?
  deletedAt DateTime?
  Cart      Carts[]

  @@map("User")
}

model Products {
  id          Int        @id @default(autoincrement())
  name        String
  price       Decimal
  description String
  active      Boolean    @default(false)
  options     String     @default("")
  Cart        Carts[]
  Categoria   Categories @relation(fields: [categoryId], references: [id])
  categoryId  Int        @default(-1)

  @@map("Product")
}

model Categories {
  id       Int        @id @default(autoincrement())
  type     String
  active   Boolean    @default(false)
  Produtos Products[]

  @@map("Category")
}

model Carts {
  id           String   @id @default(uuid())
  User         Users    @relation(fields: [userId], references: [id])
  userId       String
  Produtos     Products @relation(fields: [productsId], references: [id])
  productsId   Int
  payment_type String
  createdAt    DateTime
  editedAt     DateTime
  deletedAt    DateTime

  @@map("Cart")
}

model Payments {
  id String @id @default(uuid())

  description String

  @@map("Payment")
}
